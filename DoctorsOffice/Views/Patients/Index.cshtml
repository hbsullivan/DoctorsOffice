@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>There are no patients added yet.</h3>
}
else
{
  <ul>
    @foreach (Patient patient in Model)
    {
     <li>@Html.ActionLink($"{patient.Name}","Details",new { id = patient.PatientId}) </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Patient", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>